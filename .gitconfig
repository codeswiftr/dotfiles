# [user]
#     name = Your Name  
#     email = your.email@example.com
# 
# Note: User configuration should be set in ~/.gitconfig.local
# Run: git config --global user.name "Your Name"
# Run: git config --global user.email "your.email@example.com"

[core]
    editor = nvim
    autocrlf = input
    excludesfile = ~/.gitignore_global
	hooksPath = ~/dotfiles/git/hooks

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = current
    autoSetupRemote = true

[merge]
    tool = nvim
    conflictstyle = diff3

[diff]
    tool = nvim
    colorMoved = default

[alias]
    st = status
    co = checkout
    br = branch
    cm = commit
    lg = log --oneline --graph --decorate --all
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    
[color]
    ui = auto
    
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
    
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

# Include user-specific configurations
[include]
    path = ~/.gitconfig.local